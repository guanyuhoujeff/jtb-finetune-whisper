# Example pipeline config (.env)

DATASET_SOURCE_ROOT=./asia_new_bay_dataset
DATASET_OUTPUT_ROOT=./asia_new_bay_dataset_to_train
DATASET_SPLIT_RATIO=0.7
DATASET_SEED=42

MINIO_ENDPOINT=192.168.1.37:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=YOUR_PASSWORD
MINIO_BUCKET=asia-new-bay-dataset
MINIO_SECURE=false

TRAIN_MODEL_NAME=openai/whisper-large-v2
TRAIN_OUTPUT_DIR=./asia_new_bay-whisper-large-v2
TRAIN_MAX_STEPS=6000
TRAIN_EVAL_STEPS=500
TRAIN_BATCH_SIZE=1
TRAIN_GRAD_ACCUM_STEPS=4
TRAIN_LEARNING_RATE=0.0001
TRAIN_WARMUP_STEPS=50
TRAIN_EVAL_STRATEGY=steps
TRAIN_LOGGING_STEPS=25
TRAIN_FP16=true
TRAIN_GRADIENT_CHECKPOINTING=true
TRAIN_OPTIM=paged_adamw_8bit
TRAIN_GENERATION_MAX_LENGTH=128
TRAIN_SAVE_TOTAL_LIMIT=1

MERGE_LORA_CHECKPOINT=
MERGE_OUTPUT_DIR=./asia_new_bay-whisper-large-v2-merge/whisper-large-v2-finetune
MERGE_LOCAL_FILES_ONLY=false

CT2_MODEL_PATH=
CT2_OUTPUT_DIR=./asia_new_bay-whisper-large-v2-ct2
CT2_QUANTIZATION=float16

HF_REPO_ID=yourname/asia_new_bay-whisper-large-v2
HF_TOKEN=
